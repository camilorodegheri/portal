<h1>Listing empresas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Endereco</th>
    <th>Cidade</th>
    <th>Cep</th>
    <th>Telefone</th>
    <th>Email</th>
    <th>Cidade</th>
    <th>Pais</th>
    <th>Estado</th>
    <th>Descricao</th>
    <th>Site</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @empresas.each do |empresa| %>
  <tr>
    <td><%= empresa.nome %></td>
    <td><%= empresa.endereco %></td>
    <td><%= empresa.cidade %></td>
    <td><%= empresa.cep %></td>
    <td><%= empresa.telefone %></td>
    <td><%= empresa.email %></td>
    <td><%= empresa.cidade %></td>
    <td><%= empresa.pais %></td>
    <td><%= empresa.estado %></td>
    <td><%= empresa.descricao %></td>
    <td><%= empresa.site %></td>
    <td><%= link_to 'Show', empresa %></td>
    <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
    <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

